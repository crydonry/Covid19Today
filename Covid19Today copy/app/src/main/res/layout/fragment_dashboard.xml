<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">



        <co.ceryle.radiorealbutton.RadioRealButtonGroup
            android:id="@+id/tabDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:rrbg_animate="true"
            app:rrbg_animateSelector="3"
            app:rrbg_animateSelector_duration="100"
            app:rrbg_animateTexts_enter="overshoot"
            app:rrbg_dividerColor="#FFFFFF"
            app:rrbg_dividerSize="1dp"
            app:rrbg_radius="10dp"
            app:rrbg_selectorColor="#bababa"
            app:rrbg_selectorSize="4dp">

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_ripple="true"
                app:rrb_rippleColor="#4a4"
                app:rrb_text="area"
                app:rrb_textColor="#000000" />

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_ripple="true"
                app:rrb_rippleColor="#4a4"
                app:rrb_text="Gender"
                app:rrb_textColor="#000000">

            </co.ceryle.radiorealbutton.RadioRealButton>

            <co.ceryle.radiorealbutton.RadioRealButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrb_ripple="true"
                app:rrb_rippleColor="#4a4"
                app:rrb_text="nationality"
                app:rrb_textColor="#000000" />


        </co.ceryle.radiorealbutton.RadioRealButtonGroup>


    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="right"
        android:inputType="text"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonTable"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Table" />

        <RadioButton
            android:id="@+id/radioButtonGraph"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="Graph" />

    </RadioGroup>

    <fragment
        android:id="@+id/fragment"
        android:name="special.topic.covid19today.ui.dashboard.GraphFragment"
        tools:layout="@layout/fragment_graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>